{
  "enable_plugin": {
    "description": "插件总开关",
    "type": "bool",
    "default": true,
    "hint": "关闭后所有功能将停用"
  },
  "min_value": {
    "description": "人品值下限",
    "type": "int",
    "default": 0,
    "hint": "最小可能的人品值"
  },
  "max_value": {
    "description": "人品值上限",
    "type": "int",
    "default": 100,
    "hint": "最大可能的人品值"
  },
  "enable_llm_process": {
    "description": "启用LLM模拟检测过程",
    "type": "bool",
    "default": false,
    "hint": "使用AI生成有趣的占卜过程描述"
  },
  "process_prompt": {
    "description": "检测过程提示词",
    "type": "text",
    "default": "用水晶球占卜的口吻，描述{user_name}的今日人品值是{value}({desc})的过程。要神秘且有趣，50字以内。",
    "hint": "可用变量: {user_name}, {value}, {desc}",
    "editor_mode": true,
    "editor_language": "text"
  },
  "enable_llm_advice": {
    "description": "启用LLM生成建议",
    "type": "bool",
    "default": false,
    "hint": "使用AI根据人品值生成建议或吐槽"
  },
  "advice_prompt": {
    "description": "建议生成提示词",
    "type": "text",
    "default": "根据{user_name}的今日人品值{value}({desc})，用幽默的方式给出今日建议或吐槽。30字以内。",
    "hint": "可用变量: {user_name}, {value}, {desc}",
    "editor_mode": true,
    "editor_language": "text"
  }
}
